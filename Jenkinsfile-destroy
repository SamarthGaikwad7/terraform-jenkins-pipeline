pipeline {
    agent any

    environment {
        AWS_ACCESS_KEY_ID = credentials('aws-access-key-id')
        AWS_SECRET_ACCESS_KEY = credentials('aws-secret-access-key')
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/SamarthGaikwad7/terraform-jenkins-pipeline.git'
            }
        }

        stage('Backup Terraform State') {
            steps {
                script {
                    if (fileExists('terraform.tfstate')) {
                        bat 'copy terraform.tfstate terraform.tfstate.backup'
                        echo "Terraform state backed up."
                    } else {
                        echo "No Terraform state file found. Skipping backup."
                    }
                }
            }
        }

        stage('Sync Terraform State') {
            steps {
                script {
                    bat 'terraform init -reconfigure' // Ensure backend is configured
                    def statePullStatus = bat(script: 'terraform state pull > terraform.tfstate', returnStatus: true)

                    if (statePullStatus != 0 || !fileExists('terraform.tfstate')) {
                        echo "No existing state found or state file is empty! Creating a blank state file..."
                        bat 'echo "{}" > terraform.tfstate'
                    }
                    echo "Terraform state synchronized with AWS."
                }
            }
        }

        stage('Check & Import Missing Resources') {
            steps {
                script {
                    def stateOutput = bat(script: 'terraform state list', returnStdout: true).trim()

                    if (stateOutput == '') {
                        echo "No Terraform resources found! Checking AWS instance before importing..."

                        def instanceCheck = bat(script: 'aws ec2 describe-instances --instance-ids i-030bc4a28ad776e64 --query "Reservations[*].Instances[*].InstanceId" --output text', returnStatus: true)

                        if (instanceCheck == 0) {
                            echo "Instance found! Importing into Terraform state..."
                            bat 'terraform import aws_instance.public_instance i-030bc4a28ad776e64'
                        } else {
                            echo "Instance not found in AWS. Skipping import."
                        }
                    } else {
                        echo "Terraform resources detected:\n${stateOutput}"
                    }
                }
            }
        }

        stage('Terraform Init & Validate') {
            steps {
                script {
                    bat 'terraform init -reconfigure'
                    bat 'terraform validate'
                }
            }
        }

        stage('Terraform Plan for Destruction') {
            steps {
                script {
                    bat 'terraform plan -destroy -out=tfplan'
                }
            }
        }

        stage('Destroy Confirmation') {
            steps {
                input message: 'Are you sure you want to destroy the selected resources?', ok: 'Yes, Destroy'
            }
        }

        stage('Destroy Resources') {
            steps {
                script {
                    def stateExists = fileExists('terraform.tfstate')
                    if (!stateExists) {
                        echo "No Terraform state file found! Running Terraform refresh to detect resources..."
                        bat 'terraform refresh || echo "Terraform refresh failed!"'
                    }
                    bat 'terraform destroy -auto-approve || echo "Terraform destroy failed!"'
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline execution completed.'
        }
        success {
            echo 'Terraform resources destroyed successfully!'
        }
        failure {
            echo 'Terraform destroy failed. Please check logs.'
        }
    }
}
